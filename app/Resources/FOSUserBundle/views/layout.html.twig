<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <title>AVCC</title>

        <!-- Bootstrap core CSS -->
		{% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <!-- Custom styles for this template -->
        <link href="{{ asset('bundles/applicationfront/css/style.css') }}" rel="stylesheet">
		{% endblock %}


		{% block javascripts %}
        <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
        <!--[if lt IE 9]><script src="{{ asset('ie8-responsive-file-warning.js') }}"></script><![endif]-->
        <script src="{{ asset('js/ie-emulation-modes-warning.js') }}"></script>

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
		{% endblock %}
    </head>

    <body>
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('_welcome')}}">AVCC</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">

                        {% if app.user %}
                        <li class="dropdown">
                            <a data-toggle="dropdown" id="dropdownMenu1" type="button" class="dropdown-toggle" href="#">Settings <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('fos_user_profile_show') }}">Profile</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="{{ path('fos_user_change_password') }}">Change Password</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">Log Out</a></li>
                            </ul>
                        </li>
		        {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">Log In</a></li>
                        <li><a href="{{ path('fos_user_registration_register') }}">Sign Up</a></li>
			{% endif %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="container content_container">
			{% block fos_user_content %}
            {% endblock fos_user_content %}

                    {% block main_content %}
                    {% endblock main_content %}
        </div> <!-- /container -->

        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="{{ asset('js/ie10-viewport-bug-workaround.js') }}"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                $('.dropdown-toggle').dropdown()
            });
        </script>
    </body>
</html>
