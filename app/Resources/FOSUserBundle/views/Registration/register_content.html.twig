{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-registration">
    <h2 class="form-signin-heading">Register</h2>
    {{ form_widget(form.name)}}
    {{ form_widget(form.email) }}
    {{ form_widget(form.username) }}
    {{ form_widget(form.plainPassword, {'label': ' '}) }}
    {{ form_widget(form.plainPassword.second, {'label': ' '}) }}
    <br />
    <button class="btn btn-lg btn-primary btn-block"  type="submit" id="_submit" name="_submit">{{ 'registration.submit'|trans }}</button>
    
</form>
