{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-registration fos_user_registration_register">
    <h2 class="form-signin-heading">Register</h2>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form.name)}}
    {{ form_widget(form.email) }}
    {{ form_widget(form.username) }}
    {{ form_widget(form.plainPassword)}}
    {{ form_widget(form.plainPassword.second) }}
    
    <br />
    <button class="btn btn-lg btn-primary btn-block"  type="submit" id="_submit" name="_submit">{{ 'registration.submit'|trans }}</button>
    {{ form_end(form) }}
</form>
