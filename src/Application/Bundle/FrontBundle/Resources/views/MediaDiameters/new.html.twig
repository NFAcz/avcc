{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
    <div class="grid fluid">
        <h1>
            <a href="{{ path('vocabularies_mediadiameters') }}"><i class="icon-arrow-left-3 fg-darker smaller"></i> </a>
            New Media Diameter
        </h1>

        {{ form_start(form, {attr: {class:'form-horizontal'} }) }}
        <fieldset>
            {{ form_errors(form) }}
            <br />
            <label>Name</label>
            <div class="input-control text" data-role="input-control">
                {{ form_widget(form.name, {attr: {class:'size4'} }) }}
                {% for errorItem in form.name.vars.errors %}
                    <span class="has-error text-danger" for="{{ form.name.vars.id }}">{{ errorItem.message }}</span>
                {% endfor %}
            </div> 
            <label>Formats</label>
            <div class="input-control select" data-role="input-control">
                {{ form_widget(form.mediaDiameterFormat, {attr: {class:'size4',id:'formats',required:'required'} }) }}
                {% for errorItem in form.mediaDiameterFormat.vars.errors %}
                    <span class="has-error text-danger" for="{{ form.mediaDiameterFormat.vars.id }}">{{ errorItem.message }}</span>
                {% endfor %}
            </div>            
            {{ form_widget(form.submit, {attr: {class:'button primary'} }) }}
			or
			<a class="button"   href="{{ path('vocabularies_mediadiameters') }}">Cancel</a>
        </fieldset>
        {{ form_end(form) }}        
    </div> 
{% endblock %}
