{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
<div class="grid fluid">
    <h1>
        <a href="{{ path('terms_of_service') }}"><i class="icon-arrow-left-3 smaller"></i> </a>
        Edit Terms Of Service
    </h1>
        {{ form_start(edit_form, {attr: {class:'form-horizontal'} }) }}
    <fieldset>
            {{ form_errors(edit_form) }}
            <br />
            <label>Terms</label>
            <div>
                {{ form_widget(edit_form.terms, {attr: {class:'size4'} }) }}
                {% for errorItem in edit_form.terms.vars.errors %}
                    <span class="has-error text-danger" for="{{ edit_form.terms.vars.id }}">{{ errorItem.message }}</span>
                {% endfor %}
                </div>
                <div class="clearfix"></div>
                <label>{{ form_widget(edit_form.status, {attr: {class:''} }) }}  Publish</label>
                <br/>
                <div>
                {{ form_widget(edit_form.submit, {attr: {class:'button primary'} }) }}
                        or
                        <a class="button"   href="{{ path('terms_of_service') }}">Cancel</a>
                    </div>
                </fieldset>
        {{ form_end(edit_form) }}
            </div>

            <script>
                tinymce.init({
                    selector: "textarea",
                    menubar: false,
                    height: 250,
                    theme: "modern",
                    skin: 'light',
                    statusbar: false,
                    plugins: [
                        "advlist autolink link image lists charmap print preview hr anchor pagebreak spellchecker",
                        "searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking",
                        "save table contextmenu directionality emoticons template paste"
                    ],
                    toolbar1: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | jbimages | preview",
                    image_advtab: true,
                });
                </script>
{% endblock %}
