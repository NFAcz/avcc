{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
    <div class="grid fluid">
        <h1>
            <a href="{{ path('monthly_charges') }}"><i class="icon-arrow-left-3 smaller"></i> </a>
            Edit Monthly Charge Rate
        </h1>
        {{ form_start(edit_form, {attr: {class:'form-horizontal'} }) }}
        <fieldset>
            {{ form_errors(edit_form) }}
            <br />
            <label>Start</label>
            <div class="input-control text" data-role="input-control">
                {{ form_widget(edit_form.start, {attr: {class:'size4'} }) }}
                {% for errorItem in edit_form.start.vars.errors %}
                    <span class="has-error text-danger" for="{{ edit_form.start.vars.id }}">{{ errorItem.message }}</span>
                {% endfor %}
            </div>
            <label>End</label>
            <div class="input-control select" data-role="input-control">
                {{ form_widget(edit_form.end, {attr: {class:'size4'} }) }}
                {% for errorItem in edit_form.end.vars.errors %}
                    <span class="has-error text-danger" for="{{ edit_form.end.vars.id }}">{{ errorItem.message }}</span>
                {% endfor %}
            </div>
            <label>Charges</label>
            <div>
                $ {{ form_widget(edit_form.charges, {attr: {class:'size4'} }) }}
                {% for errorItem in edit_form.charges.vars.errors %}
                    <span class="has-error text-danger" for="{{ edit_form.charges.vars.id }}">{{ errorItem.message }}</span>
                {% endfor %}
            </div>
            <div class="clearfix"></div>
            <br/>
            <div>
                {{ form_widget(edit_form.submit, {attr: {class:'button primary'} }) }}
                or
                <a class="button"   href="{{ path('monthly_charges') }}">Cancel</a>
            </div>
        </fieldset>
        {{ form_end(edit_form) }}
    </div>

{% endblock %}
