{% extends "FOSUserBundle::layout.html.twig" %}

{% block body %}
    <h1>Colors
        <small class="on-right">
            <a href="{{ path('vocabularies_colors_new') }}"><i class="icon-plus"></i> New</a>
        </small>
    </h1>
    <div class="table-responsive">
        <table class="table bordered sortable hovered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr class="sortTr">
                        <td><i class="icon-menu on-left"></i>&nbsp;<a href="{{ path('vocabularies_colors_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.score }}</td>
                        <td class="text-center">
                            <a class="icon-pencil" title="Edit" href="{{ path('vocabularies_colors_edit', { 'id': entity.id }) }}"></a> |
                            <a class="icon-remove" title="Delete" href="{{ path('vocabularies_colors_delete', { 'id': entity.id }) }}"></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <p><input type="button" id="updatesettings" class="button primary" onclick="updateVocabSettings();" value="Update" /></p>
    </div>
    <script type="text/javascript">
        var site_url = "{{ app.request.baseUrl }}";
        function updateVocabSettings(){
            // function to update fields order
        }
    </script>
{% endblock %}
