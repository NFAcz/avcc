{% extends 'FOSUserBundle::layout.html.twig' %}
{% block body -%}


    <h1>Projects
        {% if is_granted('ROLE_MANAGER') %}
            <small class="on-right">
                <a href="{{ path('projects_new') }}"><i class="icon-plus"></i> New</a>
            </small>
        {% endif %}

    </h1>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="button-dropdown place-right">
            <button class="dropdown-toggle" id="org_text">Select Organization</button>
            <ul class="dropdown-menu place-right" data-role="dropdown" id="org_list">
                {% for key,value in organization %}
                    <li><a href="{{ path('organization_filters') }}/{{key}}" id="org{{key}}" >{{value}}</a></li>
                    {% endfor %} 
            </ul>
        </div>
    {% endif %}
    <div class="table-responsive"  style="padding-top: 25px;">
        <table class="table bordered tablesorter" id="projectsTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Organization</th>
                    <th>Created On</th>
                    <th>Updated On</th>
                        {% if is_granted('ROLE_MANAGER') %}
                        <th>Action</th>
                        {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            {% if is_granted('ROLE_MANAGER') %}
                                <a href="{{ path('projects_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                            {% else %}
                                {{ entity.name }}
                            {% endif %}

                        <td>{{ entity.organization }}</td>
                        <td>{% if entity.createdOn %}{{ entity.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.updatedOn %}{{ entity.updatedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                        {% if is_granted('ROLE_MANAGER') %}
                            <td>
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    {% if entity.status == true %}
                                        {% set status = "Active" %}
                                        {% set statusId = "1" %}
                                        {% set class = "icon-checkmark" %}
                                        {% set title = "Active" %}
                                    {% else %}    
                                        {% set status = "Inactive" %}
                                        {% set statusId = "0" %}
                                        {% set class = "icon-blocked" %}
                                        {% set title = "Inactive" %}
                                    {% endif %}
                                    <a class="{{class}} small-size" title="{{title}}" href="{{ path('project_changestatus', { 'id': entity.id, 'status': statusId }) }}">      
                                    </a> |
                                {% endif %}
                                <a title="Edit" class="icon-pencil" href="{{ path('projects_edit', { 'id': entity.id }) }}"></a>
                                {% if is_granted('ROLE_SUPER_ADMIN') %} | 
                                    <a class="icon-remove" title="Delete" href="{{ path('projects_delete', { 'id': entity.id }) }}"></a>
                                {% endif %}
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>









    <script type="text/javascript">
        $(document).ready(function () {
            $("#projectsTable").tablesorter();
            var location = window.location.href;
            var path = location.split('/');
            if ($.isNumeric(path[path.length - 1])) {
                var org_id = path[path.length - 1];
                var html;
                if (org_id != 0) {
                    $('#org_text').text($('#org' + org_id).text());
                    html = '<li><a href="{{ path('projects') }}">Reset</a></li>';
                    $('#org_list').append(html);
                }
            }
        });
    </script>
{% endblock %}
