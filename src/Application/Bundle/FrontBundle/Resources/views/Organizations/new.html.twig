{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <h3>Add Organization</h3>
    {{ form_start(form, {attr: {class:'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <br />
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label no-left-padding">Name</label>
        <div class="col-sm-4">
            {{ form_widget(form.name, {attr: {class:'form-control'} }) }}
            {% for errorItem in form.name.vars.errors %}
            <span class="has-error text-danger" for="{{ form.name.vars.id }}">{{ errorItem.message }}</span>
            {% endfor %}
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label no-left-padding">Department Name</label>
        <div class="col-sm-4">
            {{ form_widget(form.department_name, {attr: {class:'form-control'} }) }}
            {% for errorItem in form.department_name.vars.errors %}
            <span class="has-error text-danger" for="{{ form.department_name.vars.id }}">{{ errorItem.message }}</span>
            {% endfor %}
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label no-left-padding">Address</label>
        <div class="col-sm-4">
            {{ form_widget(form.address, {attr: {class:'form-control'} }) }}
            {% for errorItem in form.address.vars.errors %}
            <span class="has-error text-danger" for="{{ form.address.vars.id }}">{{ errorItem.message }}</span>
            {% endfor %}
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label no-left-padding">Contact Person Name</label>
        <div class="col-sm-4">
            {{ form_widget(form.contact_person_name, {attr: {class:'form-control'} }) }}
            {% for errorItem in form.contact_person_name.vars.errors %}
            <span class="has-error text-danger" for="{{ form.contact_person_name.vars.id }}">{{ errorItem.message }}</span>
            {% endfor %}
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label no-left-padding">Contact Person Email</label>
        <div class="col-sm-4">
            {{ form_widget(form.contact_person_email, {attr: {class:'form-control'} }) }}
            {% for errorItem in form.contact_person_email.vars.errors %}
            <span class="has-error text-danger" for="{{ form.contact_person_email.vars.id }}">{{ errorItem.message }}</span>
            {% endfor %}
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label no-left-padding">Contact Person Phone#</label>
        <div class="col-sm-4">
            {{ form_widget(form.contact_person_phone, {attr: {class:'form-control'} }) }}
            {% for errorItem in form.contact_person_phone.vars.errors %}
            <span class="has-error text-danger" for="{{ form.contact_person_phone.vars.id }}">{{ errorItem.message }}</span>
            {% endfor %}
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label no-left-padding"></label>
        <div class="col-sm-2">
            {{ form_widget(form.submit, {attr: {class:'btn btn-m btn-primary btn-block'} }) }}
        </div>
        <div class="col-sm-2">
            <button class="btn btn-m btn-default btn-block"  type="button" id="_submit" name="_submit" onclick="window.location = '{{ path('organizations') }}'">Cancel</button>
        </div>

    </div>
{#    {{ form(form) }}#}
 {{ form_end(form) }}

{% endblock fos_user_content %}
