{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Organizations</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Department_name</th>
                <td>{{ entity.departmentname }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Contact_person_name</th>
                <td>{{ entity.contactpersonname }}</td>
            </tr>
            <tr>
                <th>Contact_person_email</th>
                <td>{{ entity.contactpersonemail }}</td>
            </tr>
            <tr>
                <th>Contact_person_phone</th>
                <td>{{ entity.contactpersonphone }}</td>
            </tr>
            <tr>
                <th>Created_on</th>
                <td>{{ entity.createdon|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_on</th>
                <td>{{ entity.updatedon|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('organizations') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('organizations_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
