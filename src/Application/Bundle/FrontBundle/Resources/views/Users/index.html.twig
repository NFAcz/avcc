{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<h3>Users list <a style="margin-left: 10px;" class="btn btn-default btn-group-sm pull-right" href="{{ path('_welcome') }}">Back</a>&nbsp;<a class="btn btn-primary btn-group-sm pull-right" href="{{ path('users_new') }}">Add User</a></h3>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Roles</th>
                <th>Organizations</th>
                <th>Created_on</th>
                <th>Updated_on</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('users_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    {% for role in entity.roles %}
                     {{ role }}
                    {% endfor %}
                </td>
                <td>
                    {{entity.organizations }}
                </td>
                <td>{% if entity.createdon %}{{ entity.createdon|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedon %}{{ entity.updatedon|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td class="text-center">
                   {# <a class="glyphicon glyphicon-list-alt" title="View detail" href="{{ path('users_show', { 'id': entity.id }) }}"></a>&nbsp;#}
                    <a class="glyphicon glyphicon-edit" title="Edit" href="{{ path('users_edit', { 'id': entity.id }) }}"></a>
                    <a class="glyphicon glyphicon-remove" title="Delete" href="{{ path('users_delete', { 'id': entity.id }) }}"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    {% endblock fos_user_content %}
